<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.PantryFragment">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/BottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/caveat_bold"
                android:text="My Pantry"
                android:textAlignment="center"
                android:textColor="#FF631D"
                android:textSize="70sp"
                android:typeface="normal" />
            <Button
                android:id="@+id/addBtn"
                android:text="Add an Ingredient"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/ingredient_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/emailshape"
                android:drawablePadding="10dp"
                android:hint="Ingredient"
                android:imeOptions="actionNext"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="#ff631D"
                android:fontFamily="@font/caveat_bold"
                android:textColorHighlight="#FF631D"
                android:textColorHint="#FF631D" />

            <ListView
                android:id="@+id/ingredientList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </FrameLayout>


</android.support.constraint.ConstraintLayout>