<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp">


    //Welcome!
    <TextView
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
        android:text="Welcome!"

        android:textAlignment="center"


        android:textColor="@android:color/white"
        android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
        android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="45sp" />
    //WSLogo

    <ImageView
        android:id="@+id/wslogo"
        android:layout_width="500dp"
        android:layout_height="207dp"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:contentDescription="TODO"
        android:cropToPadding="false"
        android:paddingTop="10dp"
        android:src="@drawable/wslogo_rounded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="1dp"
                android:layout_height="20dp" />

            //NameID

            <EditText
                android:id="@+id/name_registration_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/emailshape"

                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Name"
                android:imeOptions="actionNext"

                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/white"


                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white" />

            //emailAddress

            <EditText
                android:id="@+id/email_registration_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/emailshape"

                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Email Address"
                android:imeOptions="actionNext"

                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/white"

                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white" />

            //passwordid

            <EditText
                android:id="@+id/password_registration_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/emailshape"
                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                android:drawablePadding="10dp"

                android:hint="Password"
                android:imeOptions="actionNext"

                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/white"

                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/btnRegistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/loginshape"

                android:onClick="btnRegistrationUser_Click"
                android:padding="15dp"

                android:shadowColor="@android:color/transparent"
                android:text="Register Now" />

            <Space
                android:layout_width="1dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already Have an Account?"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnAlreadyMember"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/audiowide"
                android:onClick="btnAlreadyRegister_Click"

                android:layout_marginBottom="13dp"
                android:text="CLICK HERE TO LOG IN"

                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15dp" />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>