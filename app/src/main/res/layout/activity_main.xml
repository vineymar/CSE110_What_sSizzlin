<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:alpha=".85"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"

        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        //for logo view change src "newLogoview"

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Slogan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //Need to change to a different font
        <TextView
            android:id="@+id/AppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
            android:text="What's Sizzlin"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="42sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wslogo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:alpha=".99"
                android:contentDescription="TODO"
                android:cropToPadding="false"
                android:paddingTop="10dp"
                android:src="@drawable/wslogo" />

        </LinearLayout>

        //email_id
        <EditText
            android:id="@+id/Email_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Enter your email address"
            android:textAlignment="center"
            android:visibility="visible" />

        //Need to fix text size
        //Password_id
        <EditText
            android:id="@+id/Password_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your password"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:inputType="textCapCharacters"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnLogin_Click"
            android:text="Login" />

        <Button
            android:id="@+id/NewUser-Signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnRegistration_Click"
            android:text="New User - Register now" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_light_focused" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>