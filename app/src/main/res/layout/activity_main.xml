<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:alpha=".85"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"

        android:layout_marginEnd="0dp"
        android:orientation="vertical">

        //for logo view change src "newLogoview"

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        //Need to change to a different font

        <TextView
            android:id="@+id/AppName"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:fontFamily="fonts/dancingScript"
            android:paddingTop="50dp"
            android:shadowColor="@color/common_google_signin_btn_text_dark_focused"
            android:text="What's Sizzlin"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="42sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wslogo"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:alpha=".99"
                android:contentDescription="TODO"
                android:cropToPadding="false"
                android:paddingTop="10dp"
                android:src="@drawable/wslogo" />

        </LinearLayout>

        //email_id

        <EditText
            android:id="@+id/email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:visibility="visible" />

        //Need to fix text size
        //Password_id
        <EditText
            android:id="@+id/password_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:ems="10"
            android:hint="Password"
            android:inputType="textCapCharacters"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:visibility="visible" />

        //login button
        <Button
            android:id="@+id/btnLogin"
            android:onClick="btnLogin_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Login" />
        //Registration button

        <Button
            android:id="@+id/btnRegistration"
            android:onClick="btnRegistration_Click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="New User - Register now" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></Space>

                <ImageButton
                    android:id="@+id/btnGoogleLogIn"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:onClick="btnGoogleLogIn_Click"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/google" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></Space>

                <ImageButton
                    android:id="@+id/btnFacebookLogIn"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:onClick="btnFacebookLogIn_Click"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/facebook" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></Space>

                <ImageButton
                    android:id="@+id/btnTwitterLogIn"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:onClick="btnTwitterLogIn_Click"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/twitter" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></Space>

                <ImageButton
                    android:id="@+id/btnPhoneNumberLogIn"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:onClick="btnPhoneNumberLogIn_Click"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/phone" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1">

                </Space>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>